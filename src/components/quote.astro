---
export interface Props {
  author: string;
  quote: string;
}

const { author, quote } = Astro.props;
---

<div class="flex h-32 gap-10 bg-zinc-900">
  <span class="bg-zinc-300 w-1 rounded-full"></span>
  <div class="flex flex-col justify-center gap-2">
    <blockquote class="first-letter:text-xl capitalize">{quote}</blockquote>
    <span class="text-sm"> - {author}</span>
  </div>
</div>
